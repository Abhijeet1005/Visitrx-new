# Database configuration
MONGO=mongodb+srv://<MONGO_USER>:<MONGO_PASSWORD>@<MONGO_CLUSTER>
REDIS=redis://<REDIS_USER>:<REDIS_PASSWORD>@<REDIS_CLUSTER>:<REDIS_PORT>

# Application configuration
PORT=<PORT_NUMBER>
CORS_ORIGIN=<CORS_VALUE> # or use *

# Database names
DB_NAME=<DB_NAME>


# Token configuration
ACCESS_TOKEN_SECRET=<ACCESS_TOKEN_SECRET>
ACCESS_TOKEN_EXPIRY=<ACCESS_TOKEN_EXPIRY>
REFRESH_TOKEN_SECRET=<REFRESH_TOKEN_SECRET>
REFRESH_TOKEN_EXPIRY=<REFRESH_TOKEN_EXPIRY>
REDIS_TOKEN_EXPIRY=<REDIS_TOKEN_EXPIRY>

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME=<CLOUDINARY_CLOUD_NAME>
CLOUDINARY_API_KEY=<CLOUDINARY_API_KEY>
CLOUDINARY_API_SECRET=<CLOUDINARY_API_SECRET>

# Gmail configuration
GMAIL=<GMAIL_ADDRESS>
GMAIL_PASS=<GMAIL_APPLICATION_PASSWORD> #Obtained from 2FA section of google myAccount

# Verification links
ASSET_TO_USER=<URL_HOSTED_AT>/api/token/assetAssign
USER_TO_ASSET=<URL_HOSTED_AT>/api/token/assetUnAssign
SECURITY_TO_ASSET=<URL_HOSTED_AT>/api/token/assetsFromSecurityCheck
ASSET_TO_SECURITY=<URL_HOSTED_AT>/api/token/outwardRequestFromAssetAdmin
OUTWARD_RETURN=<URL_HOSTED_AT>/api/token/outwardReturn
USER_CHECKIN=<URL_HOSTED_AT>/api/token/checkInVerify


# JWT Secret
JWT_SECRET=<JWT_SECRET>
